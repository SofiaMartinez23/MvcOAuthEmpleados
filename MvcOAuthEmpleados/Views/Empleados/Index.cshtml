@model List<Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
               IdEmpleado
            </th>
            <th>
               Apellido
            </th>
            <th>
                Oficio
            </th>
            <th>
                Salario
            </th>
            <th>
               IdDepartamento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.IdEmpleado
            </td>
            <td>
                @item.Apellido
            </td>
            <td>
                @item.Oficio
            </td>
            <td>
                @item.Salario
            </td>
            <td>
                @item.IdDepartamento
            </td>
            <td>
                    <a asp-controller="Empleados" asp-action="Details" asp-route-id="@item.IdEmpleado" class="btn btn-outline-light">Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
